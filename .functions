#!/bin/bash

function pwdpbcopy() {
  # copy current working directory, trimming any newlines
  pwd | tr -d '\n' | pbcopy
}

function cdpbpaste() {
  # clipboard contents
  local CLIPBOARD=$(pbpaste)

  # check clipboard contents is a valid directory path
  if [[ -d $CLIPBOARD ]]; then
    cd $CLIPBOARD
  else
    echo "item in clipboard is not a directory"
    return 1
  fi
}

# ref: https://github.com/dylanaraps/pure-bash-bible#generate-a-uuid-v4
function uuid() {
  C="89ab"

  for ((N=0;N<16;++N)); do
    B="$((RANDOM%256))"

    case "$N" in
      6)  printf '4%x' "$((B%16))" ;;
      8)  printf '%c%x' "${C:$RANDOM%${#C}:1}" "$((B%16))" ;;

      3|5|7|9)
        printf '%02x-' "$B"
      ;;

      *)
        printf '%02x' "$B"
      ;;
    esac
  done

  printf '\n'
}
